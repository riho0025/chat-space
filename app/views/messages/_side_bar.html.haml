.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__name__menu
        %li.side-header__box__name_edit-user
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.side-header__box__name__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            = group.show_last_message